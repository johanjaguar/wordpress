body{
  background: #e6e6e6;
}

body,a,p,span,b,i,strong,pre,th,div,em, .f-lora{
  font-family: 'Lora',sans-serif;
}
h1,h2,h3,h4,h5, #menu a, .f-lato{
  text-transform: uppercase;
  font-family: 'Lato',sans-serif;
}


.breadcrumbs{
  padding: 0.5em 0;
  font-size: 12px;
  a{
    &:hover{
      color: fog;
    }
  }
}
.separador{
  height: 70px;
  text-align: center;
  color: #fff;
  text-transform: uppercase;
  padding: .8em;
  font-size: 22px;
}
.limpiador{
  clear: both;
}

.sinmargen{
  padding: 0;
  margin: 0;
}

.espaciointerno{
  margin: 4.5em 0 3.5em 0;
}
.leermas{
  font-size: 1.2em;
  }
#wpadminbar{
  position: absolute !important;
}
footer{
  padding: 30px 0px;
  border-top: 10px solid #B48743;
  #logoSlogan{
    margin-top: 40px;
    text-align: center;
    
  }
  h3{
    font-size: 16px;
  }
  ul{
    list-style: none;
    padding-left: 0px;
    li{
      text-align: left;
      padding: 5px 0px;
      a{
        font-size: 14px;
        color: white;
      }
    }
  }
}
