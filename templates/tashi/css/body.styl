.woocommerce_page{
  .woocommerce-pagination{
    width 100%
    display inline-block
    ul{
      list-style: none
      text-align center
      width 300px
      margin 0 auto
      li{
        float left
        border-radius: 3px;
        margin 10px
        font-weight bold
        font-size 12px
        font-family Lato
        a{
          border: 1px solid #ffc000;
          font-weight bold
          background black
          padding: 5px 15px;
          color #ffc000
          background black
        }
        span{
          border: 1px solid #ffc000;
          color: black;
          background: white !important;
          font-weight bold
          padding: 5px 15px; 
        }
      }
    }
  }
  .ofertaTop {
    padding 15px 0px
    
    h3{
      text-transform capitalize
      font-size 16px
      color #282828
      text-align center
    }
    #btnOfertaTop{
      color #282828
      text-align center
      margin-bottom 20px
      a, p, span{
        color #282828
        text-align center
      }

    }
    .button{
      padding: 5px 10px;
      border-radius: 3px;
      color: white;
      background: black;
      border: 1px solid #ffc000;
    }
    img {
      border: 4px double #8698A2;
      max-width: 215px;
      height: auto;
    }
  }
  span.onsale {
    position: absolute;
    top: 25px;
    left: 10px;
    padding: 5px 10px;
    border-radius: 3px;
    color: white;
    background: black;
    border: 1px solid #ffc000;
  } 
  .cnt-contenidopage{
    padding: 20px 0px 40px 0px;
  }
  .woocommerce-result-count, .woocommerce-ordering{
    padding 5px 40px;
  }
  .titulo_producto{
    background: -webkit-gradient(linear, left top, left bottom, from(#F6E47E), to(#A87830));  
    -webkit-background-clip: text;  
    -webkit-text-fill-color: transparent;  
    font-size: 72px;
    font-family: 'Lora',sans-serif;
    text-transform: capitalize;
    position: absolute;
    margin-left: 39%;
    margin-top: 145px;
  }
  .page-title{
    display: none;
  }
}